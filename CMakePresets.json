    },
    {
      "name": "linux-ci",
      "displayName": "Linux CI build",
      "configurePreset": "linux-ci",
      "inherits": "ci"
    },
    {
      "name": "linux-gles-ci",
      "displayName": "Linux GLES CI build",
      "configurePreset": "linux-gles-ci",
